<h1>Trampoline Routines</h1>

{{#if controller.model.isLoaded }}

<div class="container">
    <div class="row">
        <div class="col-md-10">
            
            <table class="table table-striped table-bordered table-hover table-responsive">
              <thead>
                <tr>
                  <th>Name</th>
                  <th>Difficulty</th>
                  <th>Edit</th>
                </tr>
              </thead>
              <tbody>
                {{#each trampolineRoutine in controller}}
                  <tr>
                    <td>{{#link-to 'routines.trampoline.specific' trampolineRoutine.id }}{{ trampolineRoutine.name }}{{/link-to}}</td>
                    <td><strong>{{ trampolineRoutine.difficulty }}</strong></td>
                    <td>Options...</td>
                  </tr>
                {{/each}}
              </tbody>
            </table>

        </div>
    </div>
</div>

{{else}}

<i class="fa fa-spinner fa-2x fa-spin"></i>

{{/if}}
