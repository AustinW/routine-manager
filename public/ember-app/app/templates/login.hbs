<div class="row">
  <div class="col-sm-6 col-sm-offset-3">
    <div class="page-header">
      <h1>Login</h1>
    </div>
    {{#if errorMessage}}
      <div class="alert alert-danger">
      <strong>Login failed:</strong> {{errorMessage}}
    </div>
    {{/if}}
    <form {{action 'authenticate' on='submit'}}>
      <div class="form-group">
        <label for="identification">Email</label>
        {{ input id='identification' placeholder='Email...' class='form-control' value=identification }}
      </div>
      <div class="form-group">
        <label for="password">Password</label>
        {{ input id='password' placeholder='Password...' class='form-control' type='password' value=password}}
      </div>
      <button type="submit" class="btn btn-primary">Login</button>
    </form>
  </div>
</div>