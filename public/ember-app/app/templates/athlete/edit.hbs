<div class="modal fade" id="athlete-edit-modal" tabindex="-1" role="dialog" aria-labelledby="athlete-modal-label" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">

      <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
          <h4 class="modal-title tertiaryHeading">{{ model.fullName }}</h4>
      </div>
      <div class="modal-body">
        <form class="form-horizontal" role="form">

          <div class="form-group">
            <label for="first_name" class="col-sm-4 control-label">First name</label>
            <div class="col-sm-8">
              {{ input value=first_name class="form-control"}}
            </div>
          </div>

          <div class="form-group">
            <label for="last_name" class="col-sm-4 control-label">Last name</label>
            <div class="col-sm-8">
              {{ input valueBinding='model.last_name' class="form-control"}}
            </div>
          </div>

          <div class="form-group">
            <label for="last_name" class="col-sm-4 control-label"><i {{bind-attr class=gender_icon }}></i> Gender</label>
            <div class="col-sm-8">
              {{ view Ember.Select content=genders valueBinding='model.gender' class="form-control" }}
            </div>
          </div>

          <div class="form-group">
            <label for="last_name" class="col-sm-4 control-label">Birthday</label>
            <div class="col-sm-8">
              {{ calendar-date-picker valueBinding='model.birthday' }}
            </div>
          </div>

          <div class="form-group">
            <label for="team" class="col-sm-4 control-label">Team</label>
            <div class="col-sm-8">
              {{ input valueBinding='model.team' class="form-control"}}
            </div>
          </div>

          <div class="form-group">
            <label for="trampoline_level" class="col-sm-4 control-label">Trampoline Level</label>
            <div class="col-sm-8">
              {{ view Ember.Select content=model.allLevels optionValuePath='content.key' optionLabelPath='content.value' valueBinding='model.trampoline_level' class="form-control" }}
            </div>
          </div>

          <div class="form-group">
            <label for="synchro_level" class="col-sm-4 control-label">Synchro Level</label>
            <div class="col-sm-8">
              {{ view Ember.Select content=model.allLevels optionValuePath='content.key' optionLabelPath='content.value' valueBinding='model.synchro_level' class="form-control" }}
            </div>
          </div>

          <div class="form-group">
            <label for="doublemini_level" class="col-sm-4 control-label">Double Mini Level</label>
            <div class="col-sm-8">
              {{ view Ember.Select content=model.allLevels optionValuePath='content.key' optionLabelPath='content.value' valueBinding='model.doublemini_level' class="form-control" }}
            </div>
          </div>

          <div class="form-group">
            <label for="tumbling_level" class="col-sm-4 control-label">Tumbling Level</label>
            <div class="col-sm-8">
              {{ view Ember.Select content=model.allLevels optionValuePath='content.key' optionLabelPath='content.value' valueBinding='model.tumbling_level' class="form-control" }}
            </div>
          </div>

          <div class="form-group">
            <label for="notes" class="col-sm-4 control-label">Notes</label>
            <div class="col-sm-8">
              {{ textarea valueBinding='model.notes' class="form-control" }}
            </div>
          </div>
        </form>
      </div>    

      <div class="modal-footer">
        <button type="button" {{ action 'cancel' target='view'}} class="btn btn-danger">Cancel</button>
        <button type="button" {{ action 'save' target='view'}} class="btn btn-primary">Edit {{ model.fullName }}</button>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->